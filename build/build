#!/bin/bash

ln -s ../sdk/hl2sdk-manifests ../
ln -s ../../sdk/CDetour ../Extension

python3 ../configure.py -s sdk2013 \
        --hl2sdk-root `realpath ../../sdk` \
        --mms-path ../../sdk/mmsource \
        --sm-path ../../sdk/sourcemod \
	--steamworks-path ../../sdk/steamworks \
        --target x86_64
ambuild
